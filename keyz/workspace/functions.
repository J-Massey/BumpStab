import h5py

def load_hdf5(file_path):
    """
    Load data from the hdf5 file.

    Args:
        file_path (str): Path to the hdf5 file.

    Returns:
        dict: Data from the hdf5 file.
    """
    data = {}
    with h5py.File(file_path, "r") as f:
        data["U"] = f["U"][:]
        data["S"] = f["S"][:]
        data["V"] = f["V"][:]
    return data

